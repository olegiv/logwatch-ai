# Claude API Configuration
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# Archive channel - receives full detailed reports (required)
TELEGRAM_CHANNEL_ARCHIVE_ID=-1001234567890
# Alerts channel - receives only critical issues/warnings (optional, leave empty to disable)
TELEGRAM_CHANNEL_ALERTS_ID=-1009876543210

# Logwatch Configuration
LOGWATCH_OUTPUT_PATH=/tmp/logwatch-output.txt

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
MAX_LOG_SIZE_MB=10
ENABLE_DATABASE=true
DATABASE_PATH=./data/summaries.db

# Preprocessing Configuration (to handle large logwatch files)
# Automatically enabled - reduces content to fit Claude's context window
ENABLE_PREPROCESSING=true
# Maximum tokens after preprocessing (Claude has 200K context, this leaves room for prompts)
MAX_PREPROCESSING_TOKENS=150000
